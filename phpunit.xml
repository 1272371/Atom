<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="api/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         stderr="true">

    <testsuites>
        <testsuite name="phptests">
            <directory>tests/phpunit/api/</directory>
            <directory>tests/phpunit/dashboard</directory>
            <directory>tests/phpunit/php/</directory>
        </testsuite>
    </testsuites>
     <logging>
         <log type="coverage-clover" target="clover.xml"/>
         <log type="coverage-html" target="coverage" charset="UTF-8" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70" />
     </logging>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./api</directory>
            <directory suffix=".php">./dashboard</directory>
            <directory suffix=".php">./php</directory>
            <exclude>
                <directory>ExternalLibraries</directory>
                <directory>/api/</directory>
                <directory>/build/</directory>
                <directory>/css/</directory>
                <directory>/csv/</directory>
                <directory>/dashboard/</directory>
                <directory>/data/</directory>
                <directory>/extra/</directory>
                <directory>/fonts/</directory>
                <directory>/img/</directory>
                <directory>/java/</directory>
                <directory>/js/</directory>
                <directory>/php/</directory>
                <directory>/sass/</directory>
                <file>/pop.php/</file>
            </exclude>
        </whitelist>
    </filter>
</phpunit>

